<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Nanotrasen faction -->
	
  <FactionDef>
		<defName>Nanotrasen</defName>
		<label>Nanotrasen</label>
    <description>A space megacorporation about researching and selling plasma.</description>
    <pawnsPlural>Nanotrasens</pawnsPlural>
    <baseSelectionWeight>1</baseSelectionWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>CEO</leaderTitle>
    <expandingIconTexture>World/NTBaseicon</expandingIconTexture>		<!-- Sprites needed, will remove if there is one -->
	<homeIconPath>World/NTBaseicon</homeIconPath>
    <startingGoodwill>
      <min>15</min>
      <max>50</max>
    </startingGoodwill>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<baseNameMaker>NamerFactionBaseOutlander</baseNameMaker>
		<techLevel>Ultra</techLevel>
		<backstoryCategory>Civil</backstoryCategory>
		<hairTags>
			<li>Rural</li>
		</hairTags>
    <naturalColonyGoodwill>
      <min>-60</min>
      <max>0</max>
    </naturalColonyGoodwill>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
      <li>Caravan_Outlander_PirateMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>  <!-- Should i delete this temperature autisim? -->
      <min>-999999999999</min>
      <max>100</max>
    </allowedArrivalTemperatureRange>
    <pawnGroupMakers>
      <li>
        <kindDef>Normal</kindDef>
        <options>
					<Villager>50</Villager>
					<GrenadierDestructive>15</GrenadierDestructive>
					<MercenarySlasher>70</MercenarySlasher>
					<TownGuard>100</TownGuard>
					<TownCouncilman>100</TownCouncilman>
					<MercenaryGunner>100</MercenaryGunner>
					<MercenaryElite>100</MercenaryElite>
				</options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <TownTrader>1</TownTrader>
        </traders>
        <carriers>
          <SpaceCarp>5</SpaceCarp>			<!-- Yes, were using carps -->
        </carriers>
        <guards>
					<GrenadierDestructive>15</GrenadierDestructive>
					<MercenarySlasher>70</MercenarySlasher>
					<TownGuard>100</TownGuard>
					<MercenaryGunner>100</MercenaryGunner>
					<MercenaryElite>100</MercenaryElite>
				</guards>
      </li>
      <li>
        <kindDef>FactionBase</kindDef>
        <options>
					<GrenadierDestructive>70</GrenadierDestructive>
					<MercenarySlasher>100</MercenarySlasher>
					<Villager>100</Villager>
					<TownGuard>100</TownGuard>
					<TownCouncilman>100</TownCouncilman>
					<MercenaryGunner>100</MercenaryGunner>
					<MercenaryElite>250</MercenaryElite>
				</options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

</Defs>