  <ThingDef ParentName="BaseMeleeWeapon_Blunt">
    <defName>MeleeWeapon_Toolbox</defName>
    <label>toolbox</label>
    <description>Since time immemorial, Grey suited scoundrels have been caving each others heads in with Toolboxes. A robust weapon for every crewman, the Toolbox is the true equalizer.</description>
    <graphicData>
      <texPath>Weapons/toolbox</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <weaponTags>
      <li>Spacer</li>
	  <li>SS13Melee</li>
    </weaponTags>
    <tradeability>Sellable</tradeability>
    <statBases>
      <WorkToMake>400</WorkToMake>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
	<researchPrerequisites>
      <li>NanoTrasenInvestment</li>
    </researchPrerequisites>
	<costList>
      <Steel>20</Steel>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <meleeDamageDef>Blunt</meleeDamageDef>
      </li>
    </verbs>
  </ThingDef>
  
