<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="SS13LockerBase" ParentName="SS13StorageBase" Abstract="True">
    <defName>Locker</defName>
	<label>plain locker</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Furniture/Storage/Lockers/locker</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
	<costList>
      <Steel>25</Steel>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1050</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Conveniently human-sized with prime Welding Tool access.</description>
    <size>(1,1)</size>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Weapons</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
	<rotatable>false</rotatable>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
  </ThingDef>

