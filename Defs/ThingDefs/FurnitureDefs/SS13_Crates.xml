<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <ThingDef Name="SS13StorageBase" ParentName="FurnitureBase" Abstract="True">
    <designationCategory>Storage</designationCategory>
  </ThingDef>

  <ThingDef Name="SS13CrateBase" ParentName="SS13StorageBase" Abstract="True">
    <defName>Crate</defName>
    <label>plain crate</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Furniture/Storage/Crates/crateplain</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
	<costList>
      <Steel>25</Steel>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1050</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>A big body-sized box.</description>
    <size>(1,1)</size>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Weapons</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
	<rotatable>false</rotatable>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
  </ThingDef>
  
