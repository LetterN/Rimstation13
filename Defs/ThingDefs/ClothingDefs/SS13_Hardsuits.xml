	<ThingDef ParentName="ShellArmourBase">
    <defName>ApparelEVASuit</defName>
    <label>EVA Suit</label>
    <description>Keeps your insides inside when outside. A suit that protects against low pressure environments. Has a big 13 on the back.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Clothing/Heavy_Suits/EVA_Suit/spacesuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>1</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>20</Mass>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
      <ArmorRating_Heat>0.1</ArmorRating_Heat>
      <Insulation_Cold>-65</Insulation_Cold>
	  <Insulation_Heat>10</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
      <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
    </equippedStatOffsets>
    <costList>
      <Component>4</Component>
      <Plasteel>50</Plasteel>
    </costList>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<wornGraphicPath>Clothing/Heavy_Suits/EVA_Suit/spacesuit</wornGraphicPath>
			<tags>
				<li>EVASuit</li>
			</tags>
    </apparel>
  </ThingDef>
  
