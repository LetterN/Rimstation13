	<ThingDef ParentName="MiddleArmourBase">
    <defName>ApparelArmourVest</defName>
    <label>Armour Vest</label>
    <description>Standard issue security Body Armour, issued to all Security personal and select station personal. Provides a moderate amount of protection, so its recommended you wear it at all times.</description>
    <graphicData>
      <texPath>Clothing/Armour/ArmourVest_Suit/armorvest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>1</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>20</Mass>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <ArmorRating_Heat>0.05</ArmorRating_Heat>
      <Insulation_Cold>0</Insulation_Cold>
	  <Insulation_Heat>0</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
      <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
    </equippedStatOffsets>
    <costList>
      <Steel>75</Steel>
    </costList>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<wornGraphicPath>Clothing/Armour/ArmourVest_Suit/armorvest</wornGraphicPath>
			<tags>
				<li>ArmourVest</li>
			</tags>
    </apparel>
  </ThingDef>
  
