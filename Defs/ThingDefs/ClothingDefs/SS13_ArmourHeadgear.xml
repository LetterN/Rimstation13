    <graphicData>
      <texPath>Clothing/Armour/Deathsquad_Suit/deathsquadhelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <MaxHitPoints>160</MaxHitPoints>
      <Mass>2.7</Mass>
      <ArmorRating_Blunt>0.75</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
      <ArmorRating_Heat>0.25</ArmorRating_Heat>
      <ArmorRating_Electric>0.1</ArmorRating_Electric>
      <Insulation_Cold>-0</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Component>10</Component>
      <Plasteel>100</Plasteel>
    </costList>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Clothing/Armour/Deathsquad_Suit/deathsquadhelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Deathsquad</li>
			</tags>
    </apparel>
  </ThingDef>
  
</Defs>
